set main-view = id date author commit-title:graph=yes,refs=yes
set line-graphics = utf-8
set tab-size = 8
set ignore-space = all
set split-view-width = 75%

## tokyonight
# General colors
color default           189         235
color cursor            default     237
color status            189         236
color title-focus       189         238             bold
color title-blur        103         238
color delimiter         103         default
color header            111         236             bold
color section           111         default
color line-number       60          236
color id                173         default
color date              111         default
color author            141         default
color mode              173         default
color overflow          103         default
color directory         111         default
color file              default     default
color file-size         default     default
color grep.file         173         234

# Main view colors
color graph-commit      209         default
color main-head         158         default         bold
color main-remote       111         default
color main-tracked      222         default
color main-tag          209         default
color main-local-tag    173         default
color main-ref          158         default

# Palette colors
color palette-0         60          default
color palette-1         103         default
color palette-2         146         default
color palette-3         189         default
color palette-4         59          default
color palette-5         102         default
color palette-6         145         default
color palette-7         188         default
color palette-8         231         default
color palette-9         61          default
color palette-10        104         default
color palette-11        147         default
color palette-12        190         default
color palette-13        58          default

# Status view colors
color status.header     111         236             bold
color status.section    111         default
color stat-staged       158         default
color stat-unstaged     209         default
color stat-untracked    209         default

# Help view colors
color help.header       111         236             bold
color help.section      111         default
color help-group        111         default
